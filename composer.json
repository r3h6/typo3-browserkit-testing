{
	"name": "r3h6/typo3-browserkit-testing",
	"description": "BrowserKit testing for TYPO3",
	"require": {
		"symfony/browser-kit": "^5.4",
		"typo3/testing-framework": "^6.15",
		"symfony/css-selector": "^5.4"
	},
	"license": "MIT",
	"autoload": {
		"psr-4": {
			"R3H6\\Typo3BrowserkitTesting\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"R3H6\\Typo3BrowserkitTesting\\Tests\\": "tests/"
		}
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin",
		"allow-plugins": {
			"typo3/cms-composer-installers": true,
			"typo3/class-alias-loader": true
		}
	},
	"scripts": {
		"_post-autoload-dump": [
			"TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
		],
		"ci:php:lint": "find *.php src/ tests/ -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
		"ci:php:cs": "php-cs-fixer fix --config .php-cs-fixer.php -v --dry-run --using-cache no --diff",
		"fix:php:cs": "php-cs-fixer fix --config .php-cs-fixer.php",
		"ci:php:stan": "phpstan analyse"
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/public"
		}
	},
	"require-dev": {
		"typo3/cms-fluid-styled-content": "^10.4 || ^11.5",
		"typo3/cms-form": "^10.4 || ^11.5",
		"typo3/coding-standards": "^0.5.2",
		"saschaegerer/phpstan-typo3": "^1.1"
	}
}
